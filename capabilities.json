{
    "privileges": [],
    "dataRoles": [
        {
            "name": "taskId",
            "kind": "Grouping",
            "displayName": "Task ID",
            "description": "Unique identifier for each task"
        },
        {
            "name": "duration",
            "kind": "Measure",
            "displayName": "Duration (Work Days)",
            "description": "Task duration in work days for CPM calc"
        },
        {
            "name": "taskTotalFloat",
            "kind": "Measure",
            "displayName": "Task Total Float",
            "description": "User-provided total float value for Float-Based mode (optional)"
        },
        {
            "name": "taskFreeFloat",
            "kind": "Measure",
            "displayName": "Task Free Float",
            "description": "Free float value for each task (time before impacting successors)"
        },
        {
            "name": "startDate",
            "displayName": "Start Date",
            "kind": "GroupingOrMeasure",
            "description": "Actual/Forecast start date for plotting"
        },
        {
            "name": "finishDate",
            "displayName": "Finish Date",
            "kind": "GroupingOrMeasure",
            "description": "Actual/Forecast finish date for plotting"
        },
        {
            "name": "baselineStartDate",
            "displayName": "Baseline Start Date",
            "kind": "GroupingOrMeasure",
            "description": "Original/Baseline start date for plotting the baseline bar"
        },
        {
            "name": "baselineFinishDate",
            "displayName": "Baseline Finish Date",
            "kind": "GroupingOrMeasure",
            "description": "Original/Baseline finish date for plotting the baseline bar"
        },
        {
            "name": "previousUpdateStartDate",
            "displayName": "Previous Update Start Date",
            "kind": "GroupingOrMeasure",
            "description": "Start date from the previous update/snapshot for comparison"
        },
        {
            "name": "previousUpdateFinishDate",
            "displayName": "Previous Update Finish Date",
            "kind": "GroupingOrMeasure",
            "description": "Finish date from the previous update/snapshot for comparison"
        },
        {
            "name": "taskName",
            "kind": "Grouping",
            "displayName": "Task Name",
            "description": "Name or description of the task"
        },
        {
            "name": "taskType",
            "kind": "Grouping",
            "displayName": "Task Type",
            "description": "Type of task (TT_Task, TT_Mile, TT_FinMile)"
        },
        {
            "name": "predecessorId",
            "kind": "Grouping",
            "displayName": "Predecessor ID",
            "description": "ID of predecessor task"
        },
        {
            "name": "relationshipType",
            "kind": "Grouping",
            "displayName": "Relationship Type",
            "description": "Relationship type (FS, SS, FF, SF)"
        },
        {
            "name": "relationshipLag",
            "kind": "Measure",
            "displayName": "Relationship Lag",
            "description": "Lag or lead time (negative lag) for relationship in work days"
        },
        {
            "name": "relationshipFreeFloat",
            "kind": "Measure",
            "displayName": "Relationship Free Float",
            "description": "Pre-calculated free float for each relationship (optional - will calculate if not provided)"
        },
        {
            "name": "tooltip",
            "kind": "Grouping",
            "displayName": "Tooltip",
            "description": "Additional fields to display in tooltips"
        },
        {
            "name": "legend",
            "kind": "Grouping",
            "displayName": "Legend",
            "description": "Categorical field to color tasks (e.g., WBS, Department, Phase)"
        }
    ],
    "objects": {
        "taskAppearance": {
            "displayName": "Task Appearance",
            "properties": {
                "taskColor": { "displayName": "Non-Critical Task Color", "type": { "fill": { "solid": { "color": true } } } },
                "criticalPathColor": { "displayName": "Longest Path Color", "description": "Color for critical task borders and glow", "type": { "fill": { "solid": { "color": true } } } },
                "nearCriticalColor": { "displayName": "Near-Critical Color", "description": "Color for near-critical task borders and glow", "type": { "fill": { "solid": { "color": true } } } },
                "milestoneColor": { "displayName": "Milestone Color", "type": { "fill": { "solid": { "color": true } } } },
                "taskHeight": { "displayName": "Task Height", "type": { "numeric": true } },
                "milestoneSize": { "displayName": "Milestone Size", "description": "Size of milestone markers (px)", "type": { "numeric": true } },
                "criticalBorderWidth": { "displayName": "Critical Border Width (px)", "description": "Border thickness for critical tasks", "type": { "numeric": true } },
                "nearCriticalBorderWidth": { "displayName": "Near-Critical Border Width (px)", "description": "Border thickness for near-critical tasks", "type": { "numeric": true } },
                "showBaseline": { "displayName": "Show Baseline", "description": "Display baseline bars below the main task bars", "type": { "bool": true } },
                "baselineColor": { "displayName": "Baseline Color", "type": { "fill": { "solid": { "color": true } } } },
                "baselineHeight": { "displayName": "Baseline Height (px)", "type": { "numeric": true } },
                "baselineOffset": { "displayName": "Baseline Vertical Offset (px)", "description": "Distance between the main task bar and the baseline bar", "type": { "numeric": true } },
                "showPreviousUpdate": { 
                "displayName": "Show Previous Update", 
                "description": "Display previous update bars below the baseline bars", 
                "type": { "bool": true } 
                },
                "previousUpdateColor": { 
                    "displayName": "Previous Update Color", 
                    "type": { "fill": { "solid": { "color": true } } } 
                },
                "previousUpdateHeight": { 
                    "displayName": "Previous Update Height (px)", 
                    "type": { "numeric": true } 
                },
                "previousUpdateOffset": { 
                    "displayName": "Previous Update Vertical Offset (px)", 
                    "description": "Distance between the baseline bar and the previous update bar", 
                    "type": { "numeric": true } 
                }
            }
        },
        "connectorLines": {
            "displayName": "Connector Lines",
            "properties": {
                "showConnectorToggle": { 
                    "displayName": "Show Connector Toggle Button", 
                    "description": "Show or hide the connector lines toggle button in the header", 
                    "type": { "bool": true } 
                },
                "connectorColor": { "displayName": "Connector Color", "type": { "fill": { "solid": { "color": true } } } },
                "connectorWidth": { "displayName": "Connector Width", "type": { "numeric": true } },
                "criticalConnectorWidth": { "displayName": "Longest Path Width", "type": { "numeric": true } },
                "elbowOffset": { 
                    "displayName": "Elbow Offset", 
                    "description": "Controls the distance of connector line bends",
                    "type": { "numeric": true } 
                }
            }
        },
        "taskSelection": {
            "displayName": "Task Selection",
            "properties": {
                "enableTaskSelection": { "displayName": "Enable Task Selection", "type": { "bool": true } },
                "dropdownWidth": { "displayName": "Dropdown Width", "type": { "numeric": true } },
                "dropdownPosition": { "displayName": "Position", "type": { "enumeration": [
                    { "value": "top", "displayName": "Top" },
                    { "value": "topRight", "displayName": "Top Right" },
                    { "value": "topLeft", "displayName": "Top Left" }
                ] } },
             "showSelectedTaskLabel": { "displayName": "Show Selected Task Label", "type": { "bool": true } },
             "traceMode": {
            "displayName": "Trace Mode", 
            "description": "Select whether to trace critical path backward to or forward from the selected task",
            "type": { 
                "enumeration": [
                    { "value": "backward", "displayName": "Trace Backward" },
                    { "value": "forward", "displayName": "Trace Forward" }
                ] 
            }
          }
       }
      },
        "textAndLabels": {
            "displayName": "Text & Labels",
            "properties": {
                "fontSize": { "displayName": "General Font Size (Dates/Duration)", "description": "Base font size for finish dates and duration text", "type": { "numeric": true } },
                "taskNameFontSize": { "displayName": "Task Name Font Size (pt)", "description": "Font size for task names in the left margin", "type": { "numeric": true } },
                "labelColor": { "displayName": "Label Color", "description": "Color for task name and date labels", "type": { "fill": { "solid": { "color": true } } } },
                "showDuration": { "displayName": "Show Duration (CPM)", "description": "Display calculated CPM duration text inside task bars", "type": { "bool": true } },
                "durationTextColor": { "displayName": "Duration Text Color", "description": "Color for duration text inside bars (use 'Auto' for automatic contrast)", "type": { "fill": { "solid": { "color": true } } } },
                "showFinishDates": { "displayName": "Show Finish Dates", "description": "Display finish date labels next to tasks/milestones", "type": { "bool": true } },
                "dateBackgroundColor": { "displayName": "Date Background Color", "description": "Set the background color for finish date labels", "type": { "fill": { "solid": { "color": true } } } },
                "dateBackgroundTransparency": { "displayName": "Date Background Transparency (%)", "description": "Set the transparency (0=Opaque, 100=Invisible)", "type": { "numeric": true } }
            }
        },
        "layoutSettings": {
            "displayName": "Layout",
            "properties": {
                "leftMargin": { "displayName": "Left Margin", "type": { "numeric": true } },
                "taskPadding": { "displayName": "Task Padding", "type": { "numeric": true } },
                "maxTasksToShow": { "displayName": "Max Tasks To Show", "type": { "numeric": true } }
            }
        },
        "gridLines": {
            "displayName": "Horizontal Grid Lines",
            "properties": {
                "showGridLines": { "displayName": "Show Horizontal Lines", "type": { "bool": true } },
                "gridLineColor": { "displayName": "Color", "type": { "fill": { "solid": { "color": true } } } },
                "gridLineWidth": { "displayName": "Width (px)", "type": { "numeric": true } },
                "gridLineStyle": { "displayName": "Style", "type": { "enumeration": [ { "value": "solid", "displayName": "Solid" }, { "value": "dashed", "displayName": "Dashed" }, { "value": "dotted", "displayName": "Dotted" } ] } }
            }
        },
        "verticalGridLines": {
            "displayName": "Vertical Grid Lines (Monthly)",
            "properties": {
                "show": { "displayName": "Show Vertical Lines", "type": { "bool": true } },
                "lineColor": { "displayName": "Color", "type": { "fill": { "solid": { "color": true } } } },
                "lineWidth": { "displayName": "Width (px)", "type": { "numeric": true } },
                "lineStyle": { "displayName": "Style", "type": { "enumeration": [ { "value": "solid", "displayName": "Solid" }, { "value": "dashed", "displayName": "Dashed" }, { "value": "dotted", "displayName": "Dotted" } ] } },
                "showMonthLabels": { "displayName": "Show Month Labels", "type": { "bool": true } },
                 "labelColor": { "displayName": "Label Color", "description": "Color for month labels (defaults to line color if unset)", "type": { "fill": { "solid": { "color": true } } } },
                 "labelFontSize": { "displayName": "Label Font Size (pt)", "description": "Font size for month labels (defaults to general font size if 0)", "type": { "numeric": true } }
            }
        },
        "projectEndLine": {
            "displayName": "Project End Line",
            "properties": {
                 "show": { "displayName": "Show Line", "description": "Show the vertical line indicating latest finish date", "type": { "bool": true } },
                 "lineColor": { "displayName": "Color", "description": "Color of the project end line and label", "type": { "fill": { "solid": { "color": true } } } },
                 "lineWidth": { "displayName": "Width (px)", "description": "Width of the project end line", "type": { "numeric": true } },
                 "lineStyle": { "displayName": "Style", "description": "Style of the project end line", "type": { "enumeration": [ { "value": "solid", "displayName": "Solid" }, { "value": "dashed", "displayName": "Dashed" }, { "value": "dotted", "displayName": "Dotted" } ] } }
            }
        },
        "displayOptions": {
            "displayName": "Display Options",
            "properties": {
                "showTooltips": { "displayName": "Show Tooltips", "type": { "bool": true } },
                "showNearCritical": { "displayName": "Highlight Near Longest Path", "type": { "bool": true } },
                "showAllTasks": { "type": { "bool": true } }
            }
        },
        "criticalityMode": {
            "displayName": "Criticality Mode",
            "properties": {
                "calculationMode": {
                    "displayName": "Calculation Mode",
                    "description": "Choose between Longest Path (CPM) or Float-Based criticality",
                    "type": {
                        "enumeration": [
                            { "value": "longestPath", "displayName": "Longest Path (CPM)" },
                            { "value": "floatBased", "displayName": "Float-Based" }
                        ]
                    }
                },
                "floatBasedFilter": {
                    "displayName": "Float-Based Dependency Filter",
                    "description": "For Float-Based mode: filter dependencies in trace",
                    "type": {
                        "enumeration": [
                            { "value": "drivingOnly", "displayName": "Driving Only (Free Float = 0)" },
                            { "value": "all", "displayName": "All Dependencies" }
                        ]
                    }
                }
            }
        },
        "drivingPathSelection": {
            "displayName": "Driving Path Selection",
            "properties": {
                "enableMultiPathToggle": {
                    "displayName": "Enable Multi-Path Toggle",
                    "description": "Allow toggling between all driving paths of equal or near-equal duration",
                    "type": { "bool": true }
                },
                "selectedPathIndex": {
                    "displayName": "Selected Path",
                    "description": "Index of the currently selected driving path (1-based)",
                    "type": { "numeric": true }
                },
                "showPathInfo": {
                    "displayName": "Show Path Information",
                    "description": "Display path count and duration in the visual",
                    "type": { "bool": true }
                }
            }
        },
        "persistedState": {
            "displayName": "Persisted State",
            "properties": {
                "selectedTaskId": { "type": { "text": true } },
                "floatThreshold": { "type": { "numeric": true } },
                "traceMode": { "type": { "text": true } }
            }
        },
        "legend": {
            "displayName": "Legend",
            "properties": {
                "show": {
                    "displayName": "Show Legend",
                    "description": "Display the legend when a legend field is added",
                    "type": { "bool": true }
                },
                "position": {
                    "displayName": "Position",
                    "type": {
                        "enumeration": [
                            { "value": "Top", "displayName": "Top" },
                            { "value": "Bottom", "displayName": "Bottom" },
                            { "value": "Left", "displayName": "Left" },
                            { "value": "Right", "displayName": "Right" }
                        ]
                    }
                },
                "fontSize": {
                    "displayName": "Font Size (pt)",
                    "description": "Font size for legend text",
                    "type": { "numeric": true }
                },
                "showTitle": {
                    "displayName": "Show Title",
                    "description": "Display the legend title (field name)",
                    "type": { "bool": true }
                },
                "titleText": {
                    "displayName": "Title Text",
                    "description": "Custom title text (defaults to field name if empty)",
                    "type": { "text": true }
                },
                "sortOrder": {
                    "displayName": "Sort Order",
                    "description": "Sort legend items alphabetically",
                    "type": {
                        "enumeration": [
                            { "value": "none", "displayName": "Data Order" },
                            { "value": "ascending", "displayName": "Ascending (A-Z)" },
                            { "value": "descending", "displayName": "Descending (Z-A)" }
                        ]
                    }
                }
            }
        }
    },
    "dataViewMappings": [
        {
            "table": {
                "rows": {
                    "select": [
                        { "bind": { "to": "taskId" } },
                        { "bind": { "to": "duration" } },
                        { "bind": { "to": "taskTotalFloat" } },
                        { "bind": { "to": "taskFreeFloat" } },
                        { "bind": { "to": "startDate" } },
                        { "bind": { "to": "finishDate" } },
                        { "bind": { "to": "baselineStartDate" } },
                        { "bind": { "to": "baselineFinishDate" } },
                        { "bind": { "to": "previousUpdateStartDate" } },
                        { "bind": { "to": "previousUpdateFinishDate" } },
                        { "bind": { "to": "taskName" } },
                        { "bind": { "to": "taskType" } },
                        { "bind": { "to": "predecessorId" } },
                        { "bind": { "to": "relationshipType" } },
                        { "bind": { "to": "relationshipLag" } },
                        { "bind": { "to": "relationshipFreeFloat" } },
                        { "bind": { "to": "tooltip" } },
                        { "bind": { "to": "legend" } }
                    ],
                    "dataReductionAlgorithm": { "top": { "count": 60000 } }
                }
            }
        }
    ],
    "supportsHighlight": true,
    "sorting": { "default": {} },
    "supportsLandingPage": false,
    "supportsKeyboardFocus": true,
    "supportsMultiVisualSelection": true,
    "supportsEmptyDataView": false,
    "suppressDefaultTitle": false,
    "tooltips": {
        "supportedTypes": {
            "default": true,
            "canvas": true
        },
        "roles": ["tooltip"]
    }
}